# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScript and JavaScript files
[*.{ts,js}]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Package.json (npm usa 2 espacios por convenci√≥n)
[package.json]
indent_style = space
indent_size = 2
